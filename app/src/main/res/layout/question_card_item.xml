<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questionCard"
    app:cardElevation="@dimen/card_elevation_8"
    android:layout_marginBottom="@dimen/margin_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/question_layout"
            android:id="@+id/questionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/image_card"
            android:id="@+id/imageCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

        <include layout="@layout/two_statements"
            android:id="@+id/twoStatementsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

        <include layout="@layout/non_selectable_options"
            android:id="@+id/nonSelectableOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

        <include layout="@layout/selectable_options"
            android:id="@+id/selectableOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

        <include layout="@layout/four_alternatives_in_correction"
            android:id="@+id/fourAlternativeCorrectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

        <include layout="@layout/user_marked_answer"
            android:id="@+id/userMarkedAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

        <include layout="@layout/correct_answer"
            android:id="@+id/correctAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_4"
            />

        <include layout="@layout/explanation_button_layout"
            android:id="@+id/explanationBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>